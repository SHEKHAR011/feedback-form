import Layout from "../layouts/Layout.astro";
import axios from "axios";
import "../styles/global.css";

let feedbackList = [];
let errorMessage = "";
const searchQuery = Astro.url.searchParams.get("search") || "";
const showArchived = Astro.url.searchParams.get("archived") || "all";
const categoryFilter = Astro.url.searchParams.get("category") || "all";
const readFilter = Astro.url.searchParams.get("read") || "all";

// Helper function to get emoji for category
function getCategoryEmoji(category: string) {
  const normalizedCategory = category?.charAt(0).toUpperCase() + category?.slice(1).toLowerCase();
  const emojiMap: Record<string, string> = {
    'Suggestion': 'üí°',
    'Complaint': '‚ö†Ô∏è',
    'Praise': 'üëè',
    'Others': 'üìù',
  };
  return emojiMap[normalizedCategory] || 'üìù';
}

// Helper function to get color for category
function getCategoryColor(category: string) {
  const normalizedCategory = category?.charAt(0).toUpperCase() + category?.slice(1).toLowerCase();
  const colorMap: Record<string, string> = {
    'Suggestion': 'bg-blue-500/20 text-blue-400 border-blue-500/30',
    'Complaint': 'bg-red-500/20 text-red-400 border-red-500/30',
    'Praise': 'bg-green-500/20 text-green-400 border-green-500/30',
    'Others': 'bg-purple-500/20 text-purple-400 border-purple-500/30',
  };
  return colorMap[normalizedCategory] || 'bg-white/10 text-white border-white/20';
}

// Helper function to format date in user-friendly way
function formatRelativeTime(dateString: string) {
  const date = new Date(dateString);
  const now = new Date();
  const diffInSeconds = Math.floor((now.getTime() - date.getTime()) / 1000);
  
  // Less than a minute
  if (diffInSeconds < 60) {
    return 'Just now';
  }
  
  // Less than an hour
  if (diffInSeconds < 3600) {
    const minutes = Math.floor(diffInSeconds / 60);
    return `${minutes} ${minutes === 1 ? 'minute' : 'minutes'} ago`;
  }
  
  // Less than a day
  if (diffInSeconds < 86400) {
    const hours = Math.floor(diffInSeconds / 3600);
    return `${hours} ${hours === 1 ? 'hour' : 'hours'} ago`;
  }
  
  // Less than a week
  if (diffInSeconds < 604800) {
    const days = Math.floor(diffInSeconds / 86400);
    if (days === 1) return 'Yesterday';
    return `${days} days ago`;
  }
  
  // Less than a month
  if (diffInSeconds < 2592000) {
    const weeks = Math.floor(diffInSeconds / 604800);
    return `${weeks} ${weeks === 1 ? 'week' : 'weeks'} ago`;
  }
  
  // More than a month - show full date with time
  const timeStr = date.toLocaleTimeString('en-US', { 
    hour: 'numeric', 
    minute: '2-digit',
    hour12: true 
  });
  
  return date.toLocaleDateString('en-US', { 
    month: 'short', 
    day: 'numeric', 
    year: date.getFullYear() !== now.getFullYear() ? 'numeric' : undefined
  }) + ' at ' + timeStr;
}

try {
  const params = new URLSearchParams();
  if (searchQuery) params.append("search", searchQuery);
  if (showArchived !== "all") params.append("archived", showArchived);
  if (categoryFilter !== "all") params.append("category", categoryFilter);
  if (readFilter !== "all") params.append("read", readFilter);
  
  const res = await axios.get(`http://localhost:4000/api/feedback?${params.toString()}`);
  feedbackList = res.data;
} catch (e) {
  console.error("Error fetching feedback:", e);
  errorMessage = "Error loading feedback. Please ensure the backend server is running.";
}
