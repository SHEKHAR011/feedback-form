---
import Layout from "../layouts/Layout.astro";
import axios from "axios";
import "../styles/global.css";

let feedbackList = [];
let errorMessage = "";
const searchQuery = Astro.url.searchParams.get("search") || "";
const showArchived = Astro.url.searchParams.get("archived") === "true";
const categoryFilter = Astro.url.searchParams.get("category") || "all";

// Helper function to get emoji for category
function getCategoryEmoji(category: string) {
  const normalizedCategory = category?.charAt(0).toUpperCase() + category?.slice(1).toLowerCase();
  const emojiMap: Record<string, string> = {
    'Suggestion': 'üí°',
    'Complaint': '‚ö†Ô∏è',
    'Praise': 'üëè',
    'Others': 'üìù',
  };
  return emojiMap[normalizedCategory] || 'üìù';
}

// Helper function to get color for category
function getCategoryColor(category: string) {
  const normalizedCategory = category?.charAt(0).toUpperCase() + category?.slice(1).toLowerCase();
  const colorMap: Record<string, string> = {
    'Suggestion': 'bg-blue-500/20 text-blue-400 border-blue-500/30',
    'Complaint': 'bg-red-500/20 text-red-400 border-red-500/30',
    'Praise': 'bg-green-500/20 text-green-400 border-green-500/30',
    'Others': 'bg-purple-500/20 text-purple-400 border-purple-500/30',
  };
  return colorMap[normalizedCategory] || 'bg-white/10 text-white border-white/20';
}

try {
  const params = new URLSearchParams();
  if (searchQuery) params.append("search", searchQuery);
  params.append("archived", showArchived.toString());
  if (categoryFilter !== "all") params.append("category", categoryFilter);
  
  const res = await axios.get(`http://localhost:4000/api/feedback?${params.toString()}`);
  feedbackList = res.data;
} catch (e) {
  console.error("Error fetching feedback:", e);
  errorMessage = "Error loading feedback. Please ensure the backend server is running.";
}
---

<Layout title="Admin Panel - Feedback Management">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-6 sm:py-10">
      <!-- Page Header -->
      <header class="mb-6 sm:mb-10">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
          <div>
            <h1 class="text-2xl sm:text-3xl font-bold text-white">Feedback Dashboard</h1>
            <p class="text-gray-400 mt-1 text-sm sm:text-base">Manage and review anonymous feedback submissions</p>
          </div>
          <div class="flex items-center gap-2 sm:gap-4 flex-wrap">
            <div class="flex items-center space-x-2 bg-white/5 px-2 sm:px-3 py-1.5 sm:py-2 rounded-lg border border-white/10">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 sm:h-4 sm:w-4 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
              </svg>
              <span class="text-xs sm:text-sm text-gray-300 whitespace-nowrap">Protected</span>
            </div>
            <div class="flex items-center space-x-2">
              <div class="w-2 h-2 sm:w-3 sm:h-3 rounded-full bg-green-400"></div>
              <span class="text-xs sm:text-sm text-gray-400">Online</span>
            </div>
          </div>
        </div>
      </header>

      <!-- Search and Filter Bar -->
      <div class="mb-4 sm:mb-6 bg-white/5 backdrop-blur-xl border border-white/10 rounded-xl sm:rounded-2xl p-4 sm:p-6">
        <form method="GET" class="flex flex-col gap-3 sm:gap-4">
          <div class="flex-1">
            <div class="relative">
              <svg xmlns="http://www.w3.org/2000/svg" class="absolute left-3 top-1/2 transform -translate-y-1/2 h-4 w-4 sm:h-5 sm:w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
              <input
                type="text"
                name="search"
                value={searchQuery}
                placeholder="Search feedback..."
                class="w-full pl-9 sm:pl-10 pr-3 sm:pr-4 py-2 sm:py-3 text-sm sm:text-base bg-black/30 border border-white/20 rounded-xl text-white placeholder-gray-500 focus:ring-2 focus:ring-white focus:border-transparent transition duration-200"
              />
            </div>
          </div>
          <div class="flex gap-2">
            <button
              type="submit"
              class="flex-1 sm:flex-none px-4 sm:px-6 py-2 sm:py-3 text-sm sm:text-base font-semibold rounded-xl text-black bg-white hover:bg-gray-200 transition-all duration-300"
            >
              Search
            </button>
            <a
              href="/admin"
              class="flex-1 sm:flex-none px-4 sm:px-6 py-2 sm:py-3 text-sm sm:text-base font-semibold rounded-xl text-center text-white bg-white/10 hover:bg-white/20 border border-white/20 transition-all duration-300"
            >
              Clear
            </a>
          </div>
        </form>
        
        <div class="mt-4 flex flex-wrap gap-2 items-center">
          <span class="text-xs sm:text-sm font-semibold text-gray-400 w-full sm:w-auto">Filter:</span>
          <a
            href={`/admin?${new URLSearchParams({ ...(searchQuery && { search: searchQuery }), ...(showArchived && { archived: 'true' }), category: 'all' }).toString()}`}
            class={`px-3 sm:px-4 py-1.5 sm:py-2 text-xs sm:text-sm rounded-lg font-medium transition-all duration-300 ${categoryFilter === 'all' ? 'bg-white text-black' : 'bg-white/10 text-white hover:bg-white/20'}`}
          >
            All
          </a>
          <a
            href={`/admin?${new URLSearchParams({ ...(searchQuery && { search: searchQuery }), ...(showArchived && { archived: 'true' }), category: 'Suggestion' }).toString()}`}
            class={`px-3 sm:px-4 py-1.5 sm:py-2 text-xs sm:text-sm rounded-lg font-medium transition-all duration-300 ${categoryFilter === 'Suggestion' ? 'bg-blue-500 text-white' : 'bg-blue-500/20 text-blue-400 hover:bg-blue-500/30'}`}
          >
            üí°<span class="hidden sm:inline ml-1">Suggestion</span>
          </a>
          <a
            href={`/admin?${new URLSearchParams({ ...(searchQuery && { search: searchQuery }), ...(showArchived && { archived: 'true' }), category: 'Complaint' }).toString()}`}
            class={`px-3 sm:px-4 py-1.5 sm:py-2 text-xs sm:text-sm rounded-lg font-medium transition-all duration-300 ${categoryFilter === 'Complaint' ? 'bg-red-500 text-white' : 'bg-red-500/20 text-red-400 hover:bg-red-500/30'}`}
          >
            ‚ö†Ô∏è<span class="hidden sm:inline ml-1">Complaint</span>
          </a>
          <a
            href={`/admin?${new URLSearchParams({ ...(searchQuery && { search: searchQuery }), ...(showArchived && { archived: 'true' }), category: 'Praise' }).toString()}`}
            class={`px-3 sm:px-4 py-1.5 sm:py-2 text-xs sm:text-sm rounded-lg font-medium transition-all duration-300 ${categoryFilter === 'Praise' ? 'bg-green-500 text-white' : 'bg-green-500/20 text-green-400 hover:bg-green-500/30'}`}
          >
            üëè<span class="hidden sm:inline ml-1">Praise</span>
          </a>
          <a
            href={`/admin?${new URLSearchParams({ ...(searchQuery && { search: searchQuery }), ...(showArchived && { archived: 'true' }), category: 'Others' }).toString()}`}
            class={`px-3 sm:px-4 py-1.5 sm:py-2 text-xs sm:text-sm rounded-lg font-medium transition-all duration-300 ${categoryFilter === 'Others' ? 'bg-purple-500 text-white' : 'bg-purple-500/20 text-purple-400 hover:bg-purple-500/30'}`}
          >
            üìù<span class="hidden sm:inline ml-1">Others</span>
          </a>
          
          <span class="text-gray-600 mx-2 hidden sm:inline">|</span>
          
          <a
            href={showArchived ? "/admin" : "/admin?archived=true"}
            class={`px-3 sm:px-4 py-1.5 sm:py-2 text-xs sm:text-sm rounded-lg font-medium transition-all duration-300 ${showArchived ? 'bg-white text-black' : 'bg-white/10 text-white hover:bg-white/20'}`}
          >
            {showArchived ? "Active" : "Archived"}
          </a>
        </div>
      </div>

      <!-- Feedback Section -->
      <div class="bg-white/5 backdrop-blur-xl border border-white/10 rounded-xl sm:rounded-2xl shadow-2xl overflow-hidden">
        <div class="px-4 sm:px-6 py-4 sm:py-5 border-b border-white/10 bg-white/5 flex justify-between items-center">
          <h2 class="text-base sm:text-lg font-semibold text-white">Submissions</h2>
          <div class="text-xs sm:text-sm text-gray-400">
            {feedbackList.length} {feedbackList.length === 1 ? 'entry' : 'entries'}
          </div>
        </div>

        {errorMessage ? (
          <!-- Error Message -->
          <div class="p-8 text-center">
            <div class="bg-red-900/30 border border-red-600/30 rounded-xl p-6">
              <div class="mx-auto bg-red-600/20 w-12 h-12 rounded-full flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
              </div>
              <h3 class="text-lg font-medium text-white mb-2">Connection Error</h3>
              <p class="text-gray-400 mb-4">{errorMessage}</p>
              <a href="/" class="inline-flex items-center px-4 py-2 rounded-md text-black font-medium bg-white hover:bg-gray-200 transition-all duration-200">
                Go to Feedback Form
              </a>
            </div>
          </div>
        ) : feedbackList.length === 0 ? (
          <!-- No Feedback -->
          <div class="py-16 text-center">
            <div class="mx-auto w-24 h-24 rounded-full bg-white/10 flex items-center justify-center mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-medium text-white mb-1">No feedback yet</h3>
            <p class="text-gray-400 max-w-md mx-auto">
              When feedback is submitted, it will appear here.
            </p>
            <div class="mt-6">
              <a href="/" class="inline-flex items-center px-4 py-2 rounded-md text-black font-medium bg-white hover:bg-gray-200 transition-all duration-200">
                Go to Feedback Form
              </a>
            </div>
          </div>
        ) : (
          <!-- Feedback Entries -->
          <div class="divide-y divide-white/10">
            {feedbackList.map((f:any) => (
              <div class={`p-4 sm:p-6 hover:bg-white/10 transition-colors duration-200 ${f.is_read ? 'opacity-60' : ''}`} data-feedback-id={f.id}>
                <div class="flex gap-3 sm:gap-4">
                  <div class="flex-shrink-0">
                    <div class={`w-8 h-8 sm:w-10 sm:h-10 rounded-full flex items-center justify-center text-lg sm:text-xl ${f.is_read ? 'bg-white/10' : 'bg-white/20'}`}>
                      {getCategoryEmoji(f.category)}
                    </div>
                  </div>
                  <div class="flex-1 min-w-0">
                    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
                      <div class="flex items-center gap-1.5 sm:gap-2 flex-wrap">
                        <span class={`inline-flex items-center px-2 sm:px-3 py-1 rounded-full text-xs sm:text-sm font-medium border ${getCategoryColor(f.category)}`}>
                          {getCategoryEmoji(f.category)} <span class="ml-1">{f.category ? (f.category.charAt(0).toUpperCase() + f.category.slice(1)) : 'Uncategorized'}</span>
                        </span>
                        {Boolean(f.is_read) === false && (
                          <span class="inline-flex items-center px-1.5 sm:px-2 py-0.5 sm:py-1 rounded-full text-xs font-medium bg-blue-500/20 text-blue-400">
                            New
                          </span>
                        )}
                        {Boolean(f.is_archived) === true && (
                          <span class="inline-flex items-center px-1.5 sm:px-2 py-0.5 sm:py-1 rounded-full text-xs font-medium bg-yellow-500/20 text-yellow-400">
                            Archived
                          </span>
                        )}
                      </div>
                      <span class="text-xs sm:text-sm text-gray-400 whitespace-nowrap">
                        {new Date(f.created_at).toLocaleString()}
                      </span>
                    </div>
                    <p class="mt-2 sm:mt-3 text-sm sm:text-base text-gray-200 break-words">{f.message}</p>
                    <div class="mt-3 sm:mt-4 flex items-center gap-2 flex-wrap">
                      <button 
                        onclick={`toggleRead(${f.id}, ${!f.is_read})`}
                        class="text-xs sm:text-sm text-gray-300 hover:text-white font-medium flex items-center transition-all duration-200 px-2 sm:px-3 py-1 rounded-lg hover:bg-white/10"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 sm:h-4 sm:w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={f.is_read ? "M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" : "M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"} />
                        </svg>
                        <span class="hidden sm:inline">{f.is_read ? "Mark Unread" : "Mark Read"}</span>
                        <span class="sm:hidden">{f.is_read ? "Unread" : "Read"}</span>
                      </button>
                      
                      <button 
                        onclick={`toggleArchive(${f.id}, ${!f.is_archived})`}
                        class="text-xs sm:text-sm text-gray-300 hover:text-white font-medium flex items-center transition-all duration-200 px-2 sm:px-3 py-1 rounded-lg hover:bg-white/10"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 sm:h-4 sm:w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4" />
                        </svg>
                        <span class="hidden sm:inline">{f.is_archived ? "Unarchive" : "Archive"}</span>
                        <span class="sm:hidden">{f.is_archived ? "Restore" : "Archive"}</span>
                      </button>
                      
                      <button 
                        onclick={`deleteFeedback(${f.id})`}
                        class="text-xs sm:text-sm text-red-300 hover:text-red-400 font-medium flex items-center transition-all duration-200 px-2 sm:px-3 py-1 rounded-lg hover:bg-red-500/10"
                      >
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 sm:h-4 sm:w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                        Delete
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            ))}
          </div>
        )}
      </div>

      <!-- Footer -->
      <footer class="mt-10 text-center text-gray-500 text-sm">
        <p>üñ§ Secure Feedback Management System</p>
      </footer>
    </div>

    <script>
      async function toggleRead(id: number, isRead: boolean) {
        try {
          const response = await fetch(`http://localhost:4000/api/feedback/${id}/read`, {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ is_read: isRead }),
          });

          if (response.ok) {
            window.location.reload();
          } else {
            alert('Error updating feedback status');
          }
        } catch (error) {
          alert('Server error');
        }
      }

      async function toggleArchive(id: number, isArchived: boolean) {
        try {
          const response = await fetch(`http://localhost:4000/api/feedback/${id}/archive`, {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ is_archived: isArchived }),
          });

          if (response.ok) {
            window.location.reload();
          } else {
            alert('Error archiving feedback');
          }
        } catch (error) {
          alert('Server error');
        }
      }

      async function deleteFeedback(id: number) {
        if (!confirm('Are you sure you want to delete this feedback? This action cannot be undone.')) {
          return;
        }

        try {
          const response = await fetch(`http://localhost:4000/api/feedback/${id}`, {
            method: 'DELETE',
          });

          if (response.ok) {
            window.location.reload();
          } else {
            alert('Error deleting feedback');
          }
        } catch (error) {
          alert('Server error');
        }
      }

      // Make functions available globally
      (window as any).toggleRead = toggleRead;
      (window as any).toggleArchive = toggleArchive;
      (window as any).deleteFeedback = deleteFeedback;
    </script>
</Layout>
